{
  "version": 2,
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includeFiles": "templates/**/*, *.json, static/**/*"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable",
        "CDN-Cache-Control": "public, max-age=31536000",
        "X-Accel-Expires": "31536000"
      }
    },
    {
      "src": "/(.*)",
      "dest": "server.py",
      "headers": {
        "Cache-Control": "public, max-age=3600",
        "CDN-Cache-Control": "public, max-age=3600",
        "Edge-Cache-Tag": "dynamic",
        "Vary": "Accept-Encoding"
      }
    }
  ],
  "regions": ["hkg1"],  
  "env": {
    "PYTHONUNBUFFERED": "1",
    "EDGE_CACHE": "true"
  },
  "framework": {
    "name": "other",
    "version": "0.0.0",
    "cleanUrls": true,
    "trailingSlash": false
  },
  "edge": {
    "cache": {
      "html": {
        "ttl": 3600,  
        "staleWhileRevalidate": 60
      },
      "static": {
        "ttl": 31536000,
        "staleWhileRevalidate": 86400
      }
    },
    "optimization": {
      "brotli": true,
      "http2": true,
      "minify": {
        "html": true,
        "css": true,
        "js": true
      }
    }
  }
}
